<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.edu.uce.optativa3.vista.ListarPersonas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtServicio2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LISTA DE ESTUDIANTES"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="30sp"
            app:fontFamily="serif" />

        <ListView
            android:id="@+id/listaUsuarios"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_weight="1">

        </ListView>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/float_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="16dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/listarEstudianteApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="listarPorApellido"
                app:fab_icon="@drawable/ic_cloud"
                app:fab_title="subir datos" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/listarEstudianteFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="listarPorFecha"
                app:fab_icon="@drawable/ic_cloud"
                app:fab_title="subir datos" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="agregarEstudiante"
                app:fab_icon="@drawable/ic_person"
                app:fab_title="agregar estudiante" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/subirDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="subirDatos"
                app:fab_icon="@drawable/ic_cloud"
                app:fab_title="subir datos" />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>